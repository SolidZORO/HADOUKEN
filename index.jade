doctype html
html#html-top.no-js(lang='zh')
    head
        meta(charset='utf-8')
        title DayOne
    body
        each entrie in entries
            .item
                a(href='./entrie/' + entrie.id + '.html')
                    h2 #{entrie.title}
                div.date #{entrie.date}

                - if (entrie.photo)
                    .photo
                        img(src=entrie.photo, style="width: 320px")
                p.text #{entrie.text}
            hr